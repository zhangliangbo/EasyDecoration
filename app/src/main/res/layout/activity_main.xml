<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_color"
    android:orientation="vertical"
    tools:context="com.mcivicm.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/splitter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/group_splitter_size"
            android:background="@color/group_splitter_color"
            android:orientation="vertical" />

    </LinearLayout>
    <!--左右约束，则layout_width=0dp实现match_parent;上下约束，则layout_height=0dp实现match_parent-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

</LinearLayout>
